@{
    ViewData["Title"] = "Tài khoản đăng nhập";

}
@model ChangePassword

<div class="page-title" data-aos="fade">
    <div class="container d-lg-flex justify-content-between align-items-center">
        <h1 class="mb-2 mb-lg-0">Quản lí tài khoản</h1>
        <nav class="breadcrumbs">
            <ol>
                <li><a asp-action="Index" class="active" asp-controller="Home">Trang chủ</a></li>
                <li class="current">Quản lí tài khoản</li>
            </ol>
        </nav>
    </div>
</div>

<section id="account-section">
    <div class="container">

        <div class="row gy-4">

            <div class="col-lg-4 col-md-4 col-sm-12 account-info">

                <div class="account-menu" data-aos="fade-up" data-aos-delay="300">
                    <a asp-action="Profile" asp-controller="Profile" class="account-setting">Thông tin tài khoản</a>
                    <a asp-action="ChangePassword" asp-controller="Profile" class="active account-setting">Đổi mật khẩu </a>
                </div>
            </div>

            <div class="col-lg-8 col-md-8 col-sm-12 " data-aos="fade-up" data-aos-delay="300">
                <div class="account-details d-none  px-4" data-aos-delay="300">
                </div>
                <div class="account-details px-4 active acc-notification" data-aos-delay="300">
                    <form asp-action="ChangePassword" enctype="multipart/form-data" method="post" class="email-form" data-aos="fade-up" data-aos-delay="200">
                        <div class="row gy-4">
                            <div class="col-md-8">
                                <label asp-for="@Model.CurrentPassword" for="password-field" class="pb-2">Nhập mật khẩu cũ</label>
                                <input asp-for="@Model.CurrentPassword" id="password-field" class="form-control" >
                                <span asp-validation-for="@Model.CurrentPassword" class="text-danger "></span>
                            </div>

                            <div class="col-md-8">
                                <label asp-for="@Model.NewPassword" for="newpassword-field" class="pb-2">Nhập mật khẩu mới</label>
                                <input asp-for="@Model.NewPassword" id="newpassword-field" class="form-control" >
                                <span asp-validation-for="@Model.NewPassword" class="text-danger "></span>
                            </div>

                            <div class="col-md-8">
                                <label asp-for="@Model.ConfirmPassword" for="confirm-field" class="pb-2">Xác nhận mật khẩu</label>
                                <input asp-for="@Model.ConfirmPassword" id="confirm-field" class="form-control"  >
                                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger "></span>
                            </div>

                            <div class="col-md-3 offset-8 offset-lg-8">
                                <button type="submit" class="btn-send pe-lg-4 ps-lg-4">Cập nhật</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/js/account.js"></script>